<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.sifanur.library.libraryapp.LibraryView"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <ListView fx:id="bookListView" prefHeight="200"/>

        <HBox spacing="10">
            <TextField fx:id="titleField" promptText="Başlık" />
            <TextField fx:id="authorField" promptText="Yazar" />
            <TextField fx:id="yearField" promptText="Yıl" />
        </HBox>

        <HBox spacing="10">
            <Button text="Ekle" onAction="#handleAddBook"/>
            <Button text="Sil" onAction="#handleDeleteBook"/>
            <Button text="Güncelle" onAction="#handleUpdateBook"/>
        </HBox>

    </VBox>


</AnchorPane>
